<h1>Users</h1>
 
<table>
  <tr>
    <th></th>
    <th>Username</th>
    <th>First</th>
    <th>Last</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.id, user_path(user) %></td>
      <td><%= user.username %></td>
      <td><%= user.first %></td>
      <td><%= user.last %></td>
      <td><%= link_to 'View', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <!-- td><%= link_to 'Delete', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td --!>
    </tr>
  <% end %>


</table>

