<h1><%= @user.first %> <%= @user.last %> (<%= @user.username%>)
<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-sm btn-primary' %>
</h1>
<div class="container-fluid">
  <div class="row">
            <div class="col-sm-1"></div>
    <div class="col-sm-5">
      <h2>Add a time:</h2>
      <%= form_for([@user, @user.durations.build]) do |f| %>
      <table class="table-condensed">
	<tr>
	  <th><%= f.label :day %></th>
	  <td><%= f.date_field :day, value: Time.now.strftime('%Y-%m-%d') %></td>

	</tr>
	<tr>
	  <th><%= f.label :minutes %></th>
	  <td><%= f.number_field :minutes %></td>
	</tr>
	<tr>
	  <td></td>
	  <td>
	    <%= f.submit 'Add New Time', class: 'btn btn-primary' %>
	  </td>
	</tr>
      </table>
      <% end %>
    </div>
    <div class="col-sm-5">
      <h2>Walk Times</h2>
      <table class="table-striped table-condensed">
	<tr>
	  <th>Day</th>
	  <th>Minutes</th>
	  <th></th>
	</tr>
	<% @user.durations.reject { |duration| duration.day.nil? }.sort_by {|duration| duration.day}.each do |duration| %>

	<tr>
	  <td>
            <%= duration.day.strftime('%m/%d/%Y') %>
	  </td>

	  <td>
            &nbsp;<%= duration.minutes %>
	  </td>
	  <td>
	    <%= link_to 'Delete', [duration.user, duration],
		method: :delete,
		data: { confirm: 'Are you sure?' } %>
	  </td>
	</tr>
	<% end %>
      </table>
    </div>
        <div class="col-sm-1"></div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= line_chart @user.durations.reject{|d| d.day.nil?}.sort_by{|d| d.day}.map{|d| [d.day,d.minutes] }, xtitle: "Day", ytitle: "Minutes" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'Return to All Users', users_path, class: 'btn btn-primary' %>
    </div>
  </div>

</div>
